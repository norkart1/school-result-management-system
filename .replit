modules = ["php-8.2", "web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["pgadmin4", "php82", "php82Packages.composer"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "DB_CONNECTION=sqlite APP_URL=https://e8ad78d3-0ecf-4c95-b295-cb634a26d9b2-00-1aqx79ciwt1m9.janeway.replit.dev php artisan serve --host=0.0.0.0 --port=5000"
